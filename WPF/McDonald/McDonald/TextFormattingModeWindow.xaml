<Window x:Class="McDonald.TextFormattingModeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TextFormattingModeWindow"
        Height="300" 
        Width="300">
    <Grid>
        <StackPanel
            Orientation="Vertical">
            <TextBlock
                FontSize="9"
                Margin="3"
                Text="Blurry text small size"/>
            <TextBlock
                FontSize="9"
                Margin="3"
                TextOptions.TextFormattingMode="Display"
                Text="Normal text small size"/>
        </StackPanel>
    </Grid>
</Window>
