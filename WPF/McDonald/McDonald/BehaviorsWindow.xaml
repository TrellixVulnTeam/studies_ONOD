<Window 
    x:Class="McDonald.BehaviorsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:CustomBehaviors="clr-namespace:CustomBehaviors;assembly=CustomBehaviors"
    Title="BehaviorsWindow" 
    Height="300"
    Width="300">
    <Grid>
        <Canvas>
            <Rectangle Height="20" Width="30" Fill="Red">
                <i:Interaction.Behaviors>
                    <CustomBehaviors:CanvasDragBehavior/>
                 </i:Interaction.Behaviors>
            </Rectangle>
            <Ellipse Height="150" Width="55" Fill="Blue">
                <i:Interaction.Behaviors>
                    <CustomBehaviors:CanvasDragBehavior/>
                </i:Interaction.Behaviors>
            </Ellipse>
            <Ellipse Height="50" Width="50" Fill="Green">
                <i:Interaction.Behaviors>
                    <CustomBehaviors:CanvasDragBehavior/>
                </i:Interaction.Behaviors>
            </Ellipse>
        </Canvas>
    </Grid>
</Window>
